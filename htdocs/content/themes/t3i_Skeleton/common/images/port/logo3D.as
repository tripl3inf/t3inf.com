		package {						// _______________________________________________________________________		  //                                                                    classes to import			import caurina.transitions.*;						import flash.display.Sprite;			import flash.display.StageAlign;			import flash.display.StageScaleMode;			import flash.events.Event;						import org.papervision3d.cameras.Camera3D;			import org.papervision3d.lights.PointLight3D;			import org.papervision3d.objects.DisplayObject3D;			import org.papervision3d.objects.parsers.DAE;			import org.papervision3d.render.BasicRenderEngine;			import org.papervision3d.scenes.Scene3D;			import org.papervision3d.view.Viewport3D;			import org.papervision3d.view.layer.ViewportLayer;				[SWF(width="800", height="600", framerate="24")]					public class logo3D extends Sprite			{							// _______________________________________________________________________		  //                                                                    vars								//papervision main assets				private var scene:Scene3D;				private var viewport:Viewport3D;				private var camera:Camera3D;				private var light:PointLight3D;				private var renderer:BasicRenderEngine;								//other things needed for dae				public var universe:DisplayObject3D;				public var daeFile:DAE				public var layer:ViewportLayer;															// _______________________________________________________________________		  //                                                                    main constructor				public function logo3D()				{					init();				}							// _______________________________________________________________________		  //                                                                    initialize					private function init():void				{										//Setup stage.					stage.align = StageAlign.TOP_LEFT;					stage.scaleMode = StageScaleMode.NO_SCALE;					stage.quality = "BEST";										//Setup viewport, add to stage					viewport = new Viewport3D(0,0,true);			//		viewport.alpha = 0.5;					addChild(viewport);										//Setup renderer					renderer = new BasicRenderEngine();															//Setup camera					camera = new Camera3D();					camera.z = -120;					camera.y = 0;					camera.x = 0;					camera.zoom = -100;															//Setup scene					scene = new Scene3D();										//add dae object					daeFile = new DAE();					daeFile.load("images/port/tripinf_logo.dae");										daeFile.scaleX = daeFile.scaleY = 11;					daeFile.scaleZ = 11;																										//Setup container, add dae to container, add container to scene.					universe = new DisplayObject3D();					universe.addChild(daeFile);		//			viewport.alpha = 0;					scene.addChild(universe)																																//Listen to enter frame					addEventListener(Event.ENTER_FRAME, handleRender);					 					 }																	// _______________________________________________________________________		  //                                                                   render on enterframe																 private function handleRender(e:Event):void				{				//rotate and render!					//  add tween to deaFile 				//	Tweener.addTween(viewport, {alpha:1, time:5, delay:10, transition:"linear"});				//	daeFile.rotationY=( (mouseX-(stage.stageWidth /2) ) * 180 ) / stage.stageWidth;										daeFile.rotationX = (stage.mouseY / stage.stageHeight * 180 );					daeFile.rotationY = (stage.mouseX / stage.stageWidth * 180 ) + 90;				//	daeFile.rotationX = 90;				//	daeFile.rotationY = 0;				//	daeFile.rotationZ = 90;				//	daeFile.rotationX = stage.mouseY / stage.stageHeight * 360;									//	daeFile.rotationX=( (mouseY-(stage.stageHeight/2) ) * 180 ) / stage.stageHeight;					renderer.renderScene(scene,camera,viewport );											}			}		}	